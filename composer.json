{
    "name": "daikon/dbal",
    "type": "library",
    "description": "Database access components for Daikon projects.",
    "keywords": [ "database", "dbal", "immutable" ],
    "homepage": "https://github.com/daikon-cqrs/dbal",
    "license": "MPL-2.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.2",
        "beberlei/assert": "^3.0",
        "daikon/data-structure": "dev-upgrade-7.2",
        "daikon/event-sourcing": "dev-upgrade-7.2",
        "daikon/interop": "dev-upgrade-7.2",
        "daikon/read-model": "dev-upgrade-7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "squizlabs/php_codesniffer": "^3.3",
        "sebastian/phpcpd": "^4.1",
        "vimeo/psalm": "^2.0"
    },
    "autoload": {
        "psr-4": { "Daikon\\Dbal\\" : "src" }
    },
    "autoload-dev": {
        "psr-4": { "Daikon\\Tests\\Dbal\\": "tests" }
    },
    "archive": {
        "exclude": [
            "/build",
            "/vendor"
        ]
    },
    "scripts": {
        "build": [ "@sniff", "@tests" ],
        "code-sniffer": "phpcs -p -s --extensions=php --standard='PSR1,PSR2' src/",
        "code-sniffer-autofix": "phpcbf --standard=PSR2 -d tabWidth=4 src/",
        "copy-paste-detector": "phpcpd src/ || true",
        "sniff": [
            "@code-sniffer",
            "@copy-paste-detector",
            "@validate-json",
            "psalm"
        ],
        "test": "phpunit --no-coverage",
        "tests": "phpunit",
        "validate-json": "composer validate --no-check-all --no-check-lock",
        "validate-deps": "composer validate --with-dependencies --strict"
    }
}
